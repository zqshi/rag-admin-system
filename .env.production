# 🚨 RAG系统生产环境配置 - 机密文件
# 此文件包含敏感信息，绝不可提交到版本控制系统

# ============== 安全配置 ==============
# JWT密钥 - 必须使用强随机密钥
JWT_SECRET_KEY=CHANGE_THIS_TO_STRONG_SECRET_KEY_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============== 数据库配置 ==============
# PostgreSQL 主数据库
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=rag_prod_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_DB_PASSWORD
POSTGRES_DB=rag_production
DATABASE_URL=postgresql+asyncpg://rag_prod_user:CHANGE_THIS_TO_STRONG_DB_PASSWORD@localhost:5432/rag_production

# ============== 向量数据库配置 ==============
# Qdrant 向量数据库
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=CHANGE_THIS_TO_QDRANT_API_KEY
QDRANT_COLLECTION=rag_documents_prod

# ============== 缓存配置 ==============
# Redis 缓存服务器
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600

# ============== LLM API配置 ==============
# OpenAI API
OPENAI_API_KEY=CHANGE_THIS_TO_OPENAI_API_KEY
OPENAI_MODEL=gpt-3.5-turbo
EMBEDDING_MODEL=text-embedding-ada-002

# ============== CORS和API配置 ==============
# 只允许特定域名访问 - 绝不使用通配符!
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://admin.yourdomain.com
API_RATE_LIMIT=100

# ============== Celery任务队列 ==============
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============== 应用配置 ==============
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# ============== 监控配置 ==============
ENABLE_METRICS=true
ENABLE_TRACING=true
PROMETHEUS_PORT=9090

# ============== 安全策略 ==============
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=.pdf,.docx,.txt,.md,.html

# ============== 备份配置 ==============
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
S3_BACKUP_BUCKET=rag-system-backups
AWS_ACCESS_KEY_ID=CHANGE_THIS_TO_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_THIS_TO_AWS_SECRET_KEY